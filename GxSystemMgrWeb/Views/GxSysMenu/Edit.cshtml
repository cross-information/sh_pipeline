@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model Gx.Models.GX_SYS_MENU
@using (Html.BeginForm("Edit", "GxSysMenu", FormMethod.Post))
{
    <div style="padding: 10px;">
        <input type="hidden" name="Id" value="@Model.ID"/>
        <ul class="form_ul">
            <li>
                <label>菜单名称：</label>
                <input type="text" class="easyui-validatebox" name="MENUNAMC" style="width:250px;" value="@Model.MENUNAMC" />
            </li>
            <li>
                <label>所属类型：</label> 
                <input name="MODELID" id="MODELID" class="easyui-combobox" data-options="url:'@Url.Action("GetAllModels","GxSysModels")',valueField:'Value',textField:'Text',value:'@Model.MODELID'" />
            </li>  
             <li>
                <label>链接地址：</label>
                <input type="text" class="easyui-validatebox" name="MENUURL" style="width:250px;" value="@Model.MENUURL" /> 
             </li>  
            <li>
                <label>备注：</label>
                <textarea id="MENUBZ" name="MENUBZ" rows="5" cols="50">@Html.Raw(Model.MENUBZ)</textarea>
            </li>
            <li>
                <label>状态：</label>
                <select name="MENUSTATUS" id="MENUSTATUS">
                    <option value="1" @Html.Raw(Model.MENUSTATUS==1?"selected='selected'":"")>冻结</option>
                    <option value="0" @Html.Raw(Model.MENUSTATUS==0?"selected='selected'":"")>启用</option>
                </select>
             </li>
        </ul>
    </div> 
}
