@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Gx.Models.GX_DICT_CONFIG
@using (Html.BeginForm("Edit", "DictConfig", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div style="padding: 10px;">
        <ul class="form_ul">
            <li style="@Html.Raw(Model.PARENTID == 0 ? "display:none" : "")">
                <label>字典类型：</label>
                <input class="easyui-combobox" id="PreId" name="PreId" style="width: 220px;" url="@Url.Action("GetAllDictConfig", "DictConfig")"  data-options="valueField:'Value', textField:'Text',value:'@Model.PARENTID', panelHeight:'auto'" >
            </li>
            <li>
                <label>字典名称：</label>
                <input type="text" class="easyui-validatebox w200" name="Name" maxlength="50" style="width: 220px;" value="@Model.NAME" />
            </li>
            <li>
                <label>字典备注：</label>
                <textarea rows="5" cols="50" name="Bz">@Model.DICTDESC</textarea>
            </li>
            <li>
                <label>状态：</label>
                <select id="STATUS" class="easyui-combobox" name="STATUS" class="easyui-combobox" style="width: 220px;">
                    <option value="1" @Html.Raw(Model.STATUS == "1" ? "selected='selected'" : "")>冻结</option>
                    <option value="0" @Html.Raw(Model.STATUS == "0" ? "selected='selected'" : "")>正常</option>
                </select>
            </li>
        </ul>
    </div>
    <input type="hidden" value="@Model.ID" name="Id"/> 
}
